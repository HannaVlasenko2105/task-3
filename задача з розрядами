#include <stdio.h>
#include <math.h>

int main() {
    int p;
    printf("Введіть ціле число: ");
    scanf("%d", &p);
    
    if (p <= 1 || p >= 30) {
        printf("Число n має бути більше за 1 і менше за 30.\n");
        return 1;
    }

    int count = pow(2, p) - (p - 2);
    printf("Кількість чисел із %d розрядами, де трі однакові цифри не стоять поруч: %d\n", p, count);

    return 0;
}
